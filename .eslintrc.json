{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Add any specific ESLint rules you want to enforce
  },
  "settings": {
    "react": {
      "version": "detect" // Specify the React version here, or use "16.0" or "17.0" for a specific version
    }
  }
}
